{
  "name": "phantom-launcher",
  "version": "0.9.0-preview",
  "private": true,
  "type": "module",
  "bin": "phantom_app/server.cjs",
  "pkg": {
    "assets": "phantom_app/**/*",
    "targets": [
      "node18-win-x64"
    ]
  },
  "scripts": {
    "dev": "vite",
    "server": "node --loader ts-node/esm server.ts",
    "build:front": "vite build",
    "build:server": "esbuild server.ts --bundle --platform=node --format=cjs --external:sharp --external:better-sqlite3 --outfile=phantom_app/server.cjs",
    "build:exe": "node --experimental-sea-config sea-config.json && node -e \"require('fs').copyFileSync(process.execPath, 'phantom_app/PhantomServer.exe')\" && npx postject phantom_app/PhantomServer.exe NODE_SEA_BLOB phantom_app/sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2",
    "clean": "powershell -NoProfile -Command \"if (Test-Path dist) { Remove-Item dist -Recurse -Force }; if (Test-Path phantom_app) { Get-ChildItem -Path phantom_app -Exclude .env | Remove-Item -Recurse -Force }\"",
    "build": "powershell -ExecutionPolicy Bypass -File ./scripts/build.ps1",
    "start": "concurrently \"npm run server\" \"npm run dev\""
  },
  "dependencies": {
    "animejs": "3.2.2",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "preact": "^10.26.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.0",
    "postcss": "^8.5.6",
    "postject": "^1.0.0-alpha.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}