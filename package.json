{
  "name": "phantom-launcher",
  "version": "0.8.1.0",
  "private": true,
  "type": "module",
  "bin": "phantom_app/server.js",
  "pkg": {
    "assets": "phantom_app/**/*",
    "targets": [
      "node18-win-x64"
    ]
  },
  "scripts": {
    "dev": "vite",
    "server": "node --loader ts-node/esm server.ts",
    "build:front": "vite build",
    "build:server": "esbuild server.ts --bundle --platform=node --format=cjs --outfile=phantom_app/server.js",
    "build:exe": "pkg phantom_app/server.js --targets node18-win-x64 --output phantom_app/PhantomServer.exe --public",
    "clean": "powershell -NoProfile -Command \"if (Test-Path dist) { Remove-Item dist -Recurse -Force }; if (Test-Path phantom_app) { Get-ChildItem -Path phantom_app -Exclude .env | Remove-Item -Recurse -Force }\"",
    "build": "powershell -ExecutionPolicy Bypass -File ./scripts/build.ps1",
    "start": "concurrently \"npm run server\" \"npm run dev\""
  },
  "dependencies": {
    "animejs": "3.2.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "jimp": "^0.22.10",
    "preact": "^10.26.2"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.0",
    "pkg": "^5.8.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}